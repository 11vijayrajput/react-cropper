{
    "presets": [
        ["@babel/preset-env", {
            "loose": true,
            "modules": false
        }],
        "@babel/preset-react"
    ],
    "plugins": [
        ["@babel/proposal-class-properties", {
            "loose": true
        }],
        ["@babel/proposal-object-rest-spread", {
            "loose": true
        }],
        "@babel/transform-object-assign"
    ],
    "ignore": [
        "dist/**",
        "webpack.config.js",
        "webpack.config.dev.js",
        "bundle.js"
    ]
}
